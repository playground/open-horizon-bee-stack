# Start with a base image that includes git
FROM ubuntu:20.04

# Set environment variables to prevent interactive prompts during installation
ENV DEBIAN_FRONTEND=noninteractive

# Install necessary tools (git, curl, etc.)
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set the working directory inside the container
WORKDIR /app

# Clone the GitHub repository
RUN git clone https://github.com/i-am-bee/bee-stack.git

# Set the working directory to the cloned repo
WORKDIR /app/bee-stack

# Run setup script to configure LLM provider and start the stack
RUN chmod +x /app/bee-stack/bee-stack.sh
RUN ./bee-stack.sh setup

CMD ["./bee-stack.sh", "setup"]
